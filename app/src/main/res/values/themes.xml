<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Micropower" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/bg_app</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:fontFamily">@font/roboto_slab_light</item>
        <item name="android:textColor">@color/color_text_value</item>
    </style>

    <style name="Theme.Micropower" parent="Base.Theme.Micropower" />

    <style name="BottomSheetPopupTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetPopup</item>
    </style>

    <style name="BottomSheetPopup" parent="Widget.Design.BottomSheet.Modal" />

    <style name="Label" parent="Widget.MaterialComponents.TextView" />

    <style name="Label.Hint" parent="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_x1</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Label.Date" parent="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_x4</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:text">@string/date_time_normal_default</item>
    </style>

    <style name="Label.Date.Forecast" parent="Label.Date">
        <item name="android:layout_marginTop">@dimen/margin_x4</item>
        <item name="android:layout_marginBottom">@dimen/margin_x2</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Label.Date.Small" parent="Label.Date">
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/color_text_hint</item>
    </style>

    <style name="Label.Status" parent="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_x4</item>
        <item name="android:layout_marginBottom">@dimen/margin_x4</item>
        <item name="android:layout_marginStart">@dimen/margin_x1</item>
        <item name="android:layout_marginEnd">@dimen/margin_x1</item>
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
        <item name="drawableTint">@color/color_primary</item>
    </style>

    <style name="Label.Value" parent="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
    </style>

    <style name="Label.Value.Normal" parent="Label.Value">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Label.Weather" parent="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
    </style>

    <style name="Label.Weather.Forecast" parent="@style/Label.Weather">
    </style>

    <style name="Label.Weather.Main" parent="@style/Label.Weather">
        <item name="android:layout_marginTop">@dimen/margin_x4</item>
        <item name="android:layout_marginBottom">@dimen/margin_x12</item>
        <item name="android:layout_marginStart">@dimen/margin_x1</item>
        <item name="android:layout_marginEnd">@dimen/margin_x1</item>
    </style>

    <style name="Label.Location" parent="Label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Label.Location.Name" parent="Label.Location">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
    </style>

    <style name="Label.Location.Type" parent="Label.Location">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Label.Location.Address" parent="Label.Location">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_marginTop">@dimen/margin_x1</item>
    </style>

    <style name="Label.Location.Coordinates" parent="Label.Location">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="Button" parent="Widget.Material3.Button.ElevatedButton" />

    <style name="Button.Location" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_x4</item>
        <item name="icon">@drawable/ic_location</item>
    </style>

    <style name="Button.Image" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_x2</item>
        <item name="icon">@drawable/ic_logout</item>
    </style>


    <style name="ProgressBar.Loading" parent="Widget.Material3.CircularProgressIndicator.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_x2</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorSize">@dimen/margin_x4</item>
    </style>


    <style name="ProgressBar.Generator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="trackColor">@color/color_bg_tint_dark</item>
        <item name="trackCornerRadius">@dimen/indicator_thickness_forecast</item>
        <item name="trackThickness">@dimen/indicator_thickness_forecast</item>
    </style>


    <style name="ImageCondition">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="InputText" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:layout_width">@dimen/auth_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_x2</item>

    </style>

    <style name="EditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
    </style>

    <style name="ListChip" parent="Widget.MaterialComponents.ChipGroup">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_x2</item>
    </style>


    <style name="ListChip.Item" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="chipStartPadding">@dimen/margin_x2</item>
        <item name="chipEndPadding">@dimen/margin_x2</item>
        <item name="fontFamily">@font/roboto_slab_light</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

</resources>